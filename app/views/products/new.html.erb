
<%= form_for(@product) do |f| %>
<% if @product.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

  <ul>
    <% @product.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row">
  <div class="col-sm-3">
    <div>
      <%= f.label :name %>

    </div>
    <div>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="col-sm-3">
    <div>
      <%= f.label :description %>

    </div>
    <div>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
  </div>
  <div class="col-sm-3">
    <div>
      <%= f.label :provider %>

    </div>
    <div>
      <%= f.text_field :provider, class: 'form-control' %>
    </div>
  </div>
  <div class="col-sm-3">
    <div>
      <%= f.label :unity %>

    </div>
    <div>
      <%= f.text_field :unity, class: 'form-control' %>
    </div>
  </div>

</div>

<div class="row">
  <div class="col-sm-3">

    <div>
      <%= f.label :price %>

    </div>
    <div>
      <%= f.number_field :price ,  class: 'form-control' %>
    </div>
  </div>

  <div class="col-sm-3">
    <div>
      <%= f.label :code %>
    </div>
    <div>
      <%= f.number_field :code, class: 'form-control' %>
    </div>
  </div>
</div>



<div class="actions">
  <%= f.submit %>
</div>
<% end %>
